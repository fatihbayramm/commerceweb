<%- include("header"); -%>
<div class="container-wrap">
  <div class="container">
    <% products.forEach((product) => { %>
    <div class="list-product">
      <a href="/product/<%= product.id %>" class="list-product-router">
        <div class="list-product-image-box">
          <img
            class="list-product-image"
            src="<%= product.image %>"
            alt="Bu resim tarayıcınız tarafından görüntülenemiyor."
          />
        </div>
        <div class="list-product-info">
          <div class="list-product-price-and-sku">
            <%= product.name %> |
            <span class="list-product-price"><%= product.price %> TL</span>
            <br />
            <span class="list-product-sku">Ürün Kodu: <%= product.sku %></span>
          </div>
          <div class="list-product-stock">
            Stokta Kalan: <%= product.stock %> <br />
          </div>
        </div>
      </a>
    </div>
    <% }) %>
  </div>
</div>
<%- include("footer"); -%>
