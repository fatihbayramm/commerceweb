<%- include("../header"); -%>
<div class="login-container">
  <div class="login-box">
    <h1>Giriş Yap</h1>
    <!-- <form action="#"> -->
    <div class="login-input-box">
      <label for="login-email" class="login-label">E-posta</label> <br />
      <input
        type="text"
        name="login-email"
        id="login-email"
        class="login-input"
      />
    </div>
    <div class="login-input-box">
      <label for="js-login-password" class="login-label">Şifre</label> <br />
      <input
        type="password"
        name="login-password"
        id="js-login-password"
        class="login-input"
      />
      <button class="login-show-password js-login-show-password">
        <i class="bi bi-eye-fill js-bi-eye-fill"></i>
      </button>

      <br />
      <a href="/register/" class="register-page-router">Kaydol</a>
    </div>

    <button type="submit" class="login-btn">Giriş Yap</button>
    <!-- </form> -->
  </div>
</div>
<%- include("../footer"); -%>
